{
  "name": "aronnax-styles",
  "version": "0.3.0",
  "description": "A lightweight, modern, customizable CSS component",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/*.css dist/*.js",
    "prebuild": "npm run clean",
    "predev": "npm run clean",
    "dev:pug": "node scripts/compile-pug.js compile",
    "dev:css": "postcss css/main.css -o dist/aronnax-styles.css",
    "dev:js": "esbuild js/main.js --bundle --outfile=dist/aronnax-styles.js",
    "dev": "npm run dev:pug && npm run dev:css && npm run dev:js",
    "watch:pug": "node scripts/compile-pug.js watch",
    "watch:css": "postcss css/main.css -o dist/aronnax-styles.css --watch",
    "watch:js": "esbuild js/main.js --bundle --outfile=dist/aronnax-styles.js --watch",
    "watch": "concurrently \"npm run watch:pug\" \"npm run watch:css\" \"npm run watch:js\"",
    "build:pug": "node scripts/compile-pug.js compile",
    "build:css": "NODE_ENV=production postcss css/main.css -o dist/aronnax-styles.min.css",
    "build:js": "esbuild js/main.js --bundle --outfile=dist/aronnax-styles.min.js --minify",
    "build": "npm run build:pug && npm run build:css && npm run build:js",
    "serve:dev": "concurrently \"npm run watch\" \"serve -s . -l 3000\"",
    "serve:prod": "serve -s . -l 3000",
    "preview": "npm run build && npm run serve:prod",
    "start": "npm run serve:dev",
    "check:size": "ls -lah dist/",
    "check:deps": "npm outdated",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "css",
    "components",
    "ui",
    "design-system",
    "dark-mode",
    "minimal",
    "responsive",
    "styles"
  ],
  "author": "ihortok",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AronnaxSpace/aronnax-styles.git"
  },
  "homepage": "https://github.com/AronnaxSpace/aronnax-styles#readme",
  "bugs": {
    "url": "https://github.com/AronnaxSpace/aronnax-styles/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.1",
    "esbuild": "^0.25.9",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "serve": "^14.2.5"
  },
  "browserslist": [
    "defaults"
  ]
}
