//- Cards Section
section.mb-4
  h2.mb-2 Cards
  
  //- Basic
  h3.mb-2 Basic
  .cards-grid.mb-4
    each card in cards
      .card(class=card.class)
        if card.image
          img(src=card.image alt=card.imageAlt)
        h3= card.title
        if card.meta
          .event-meta= card.meta
        p= card.description
        if card.price
          .price= card.price

