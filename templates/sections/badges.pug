//- Badges Section
section#badges.mb-4
  h2.mb-2 Badges
  
  //- Basic Badges
  h3.mb-2 Basic Badges
  .card.mb-4
    .badge-group.mb-2
      span.badge.badge-primary Primary
      span.badge.badge-secondary Secondary
      span.badge.badge-success Success
      span.badge.badge-danger Danger
      span.badge.badge-warning Warning
      span.badge.badge-info Info
      span.badge.badge-light Light
      span.badge.badge-dark Dark

  //- Outline Badges
  h3.mb-2 Outline Badges
  .card.mb-4
    .badge-group.mb-2
      span.badge.badge-outline-primary Primary
      span.badge.badge-outline-secondary Secondary
      span.badge.badge-outline-success Success
      span.badge.badge-outline-danger Danger
      span.badge.badge-outline-warning Warning
      span.badge.badge-outline-info Info

  //- Badge Sizes
  h3.mb-2 Badge Sizes
  .card.mb-4
    .badge-group.mb-2
      span.badge.badge-sm.badge-primary Small
      span.badge.badge-primary Default
      span.badge.badge-lg.badge-primary Large

  //- Badges with Icons
  h3.mb-2 Badges with Icons
  .card.mb-4
    .badge-group.mb-2
      span.badge.badge-success.badge-icon
        i.fas.fa-check
        span Success
      span.badge.badge-danger.badge-icon
        i.fas.fa-times
        span Error
      span.badge.badge-warning.badge-icon
        i.fas.fa-exclamation
        span Warning
      span.badge.badge-info.badge-icon
        i.fas.fa-info
        span Info

  //- Dismissible Badges
  h3.mb-2 Dismissible Badges
  .card.mb-4
    .badge-group.mb-2
      span.badge.badge-primary.badge-dismissible
        span Primary
        button.badge-close(title="Remove") ×
      span.badge.badge-success.badge-dismissible
        span Success
        button.badge-close(title="Remove") ×
      span.badge.badge-danger.badge-dismissible
        span Danger
        button.badge-close(title="Remove") ×

  //- Pill Badges
  h3.mb-2 Pill Badges
  .card.mb-4
    .badge-group.mb-2
      span.badge.badge-primary.badge-pill Primary
      span.badge.badge-success.badge-pill Success
      span.badge.badge-danger.badge-pill Danger
      span.badge.badge-warning.badge-pill Warning

  //- Animated Badges
  h3.mb-2 Animated Badges
  .card.mb-4
    .badge-group.mb-2
      span.badge.badge-danger.badge-pulse Live
      span.badge.badge-success.badge-pulse Active
      span.badge.badge-warning.badge-pulse Pending
