//- Lists Section
section#lists.mb-4
  h2.mb-2 Lists
  
  //- Todo Items List
  h3.mb-2 Todo Items
  .card.mb-4
    .list-header
      h4.list-title Today's Tasks
      span.badge.badge-secondary.badge-lg 4 items
    ul.list.list-todo
      li.list-item.list-item-todo
        .list-item-content
          input(type="checkbox" id="todo-1" class="todo-checkbox")
          label(for="todo-1" class="todo-label")
            span.todo-text Complete project documentation
          .todo-actions
            button.todo-action-btn(title="Edit")
              i.fas.fa-edit
            button.todo-action-btn(title="Delete")
              i.fas.fa-trash
        .todo-meta
          span.badge.badge-danger High
          span.todo-due-date Due: Today
      li.list-item.list-item-todo
        .list-item-content
          input(type="checkbox" id="todo-2" class="todo-checkbox" checked)
          label(for="todo-2" class="todo-label")
            span.todo-text Review code changes
          .todo-actions
            button.todo-action-btn(title="Edit")
              i.fas.fa-edit
            button.todo-action-btn(title="Delete")
              i.fas.fa-trash
        .todo-meta
          span.badge.badge-warning Medium
          span.todo-due-date Due: Tomorrow
      li.list-item.list-item-todo
        .list-item-content
          input(type="checkbox" id="todo-3" class="todo-checkbox")
          label(for="todo-3" class="todo-label")
            span.todo-text Update design system
          .todo-actions
            button.todo-action-btn(title="Edit")
              i.fas.fa-edit
            button.todo-action-btn(title="Delete")
              i.fas.fa-trash
        .todo-meta
          span.badge.badge-secondary Low
          span.todo-due-date Due: Next week
      li.list-item.list-item-todo
        .list-item-content
          input(type="checkbox" id="todo-4" class="todo-checkbox")
          label(for="todo-4" class="todo-label")
            span.todo-text Plan team meeting
          .todo-actions
            button.todo-action-btn(title="Edit")
              i.fas.fa-edit
            button.todo-action-btn(title="Delete")
              i.fas.fa-trash
        .todo-meta
          span.badge.badge-warning Medium
          span.todo-due-date Due: Friday

